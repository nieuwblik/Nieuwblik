# Apache .htaccess for 301 redirects
# Only use if hosting on Apache server

<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Redirect old English slugs to Dutch slugs
  RewriteRule ^services$ /diensten [R=301,L]
  RewriteRule ^about$ /over-ons [R=301,L]
  RewriteRule ^start-your-project$ /start-je-project [R=301,L]
</IfModule>

# Security Headers
<IfModule mod_headers.c>
  Header set X-Frame-Options "DENY"
  Header set X-Content-Type-Options "nosniff"
  Header set X-XSS-Protection "1; mode=block"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  Header set Permissions-Policy "camera=(), microphone=(), geolocation=()"
</IfModule>
